<?xml version='1.0' encoding='utf-8'?>
<widget id="jp.calil.sabatomap" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sabae Library Map</name>
    <description>鯖江図書館マップ</description>
    <author email="contact@calil.jp" href="http://calil.jp">CALIL Inc.</author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="default" />
    <preference name="webviewbounce" value="false" />
    <platform name="android">
        <preference name="xwalkVersion" value="14+"/>
        <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect"/>
        <preference name="xwalkMode" value="embedded"/>
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
    </platform>
    <platform name="ios">
        <preference name="FadeSplashScreen" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false" />
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="Orientation" value="all" />
    </platform>
    <platform name="windows">
        <preference name="windows-target-version" value="10.0" />
        <preference name="WindowsDefaultUriPrefix" value="ms-appx://" />
    </platform>
    <platform name="browser">
        <preference name="SplashScreen" value="img/splash_for_browser.png" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="SplashScreenBackgroundColor" value="#0068B1" />
        <preference name="ShowSplashScreen" value="true" />
        <preference name="SplashScreenWidth" value="451" />
        <preference name="SplashScreenHeight" value="800" />
    </platform>
    <platform name="android">
        <preference name="SplashScreen" value="splash" />
        <icon src="www/res/icons/android/icon-48-mdpi.png" density="mdpi" />
        <icon src="www/res/icons/android/icon-72-hdpi.png" density="hdpi" />
        <icon src="www/res/icons/android/icon-96-xhdpi.png" density="xhdpi" />
        <icon src="www/res/icons/android/icon-144-xxhdpi.png" density="xxhdpi" />
        <icon src="www/res/icons/android/icon-192-xxxhdpi.png" density="xxxhdpi" />
    </platform>
</widget>
